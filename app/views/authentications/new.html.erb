<%= form_tag sign_in_path do |f| %>

  <div>
    <%= label_tag :email_address, "Email" %>
    <%= email_field_tag :email_address, ""%>
  </div>

  <div>
    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password, "" %>
  </div>

  <div>
    <%= submit_tag "Enter" %>
  </div>

<% end %>
